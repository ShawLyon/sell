// 清除浮动
.clearfix
  display inline-block
  &:after
    display block
    height 0
    line-height 0
    content '.'
    clear both
    visibility hidden

@media (-webkit-min-device-pixel-ratio: 1.5),(min-device-pixel-ratio: 1.5)
// 全局的
    .border-1px
        &::after   /*伪类,区分伪元素*/
            -webkit-transform scaleY(.7)
            transiform scaleY(.7)
@media (-webkit-min-device-pixel-ratio: 2),(min-device-pixel-ratio: 2)
    .border-1px
        &::after   /*伪类,区分伪元素*/
            -webkit-transform scaleY(.5)
            transform scaleY(.5)
            

 